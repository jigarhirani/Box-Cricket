@using BOXCricket.BAL
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="misc-wrapper d-flex justify-content-center align-items-center mt-4">
    <div class="text-center">
        <h2 class="mb-2">Page Not Found :(</h2>
        <p class="mb-4">Oops! 😖 The requested URL was not found on this server.</p>
        @{
            if (CommonVariables.UserID() != null)
            {
                if (CommonVariables.IsAdmin() == false)
                {
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to home</a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="AdminIndex" class="btn btn-primary">Back to home</a>
                }
            }
            else
            {
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to home</a>
            }
        }
        <div class="mt-3">
            <img class="img-fluid" alt="page-misc-error-light" width="500" src="~/assets/img/illustrations/page-misc-error-light.png" />
        </div>
    </div>
</div>
