@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Vertical Layouts</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="col-lg-8 mx-auto">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Basic Layout</h5>
                        </div>
                        <div class="card-body">
                            <form>

                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-fullname">Ground Name</label>
                                    <input type="text" class="form-control" id="basic-default-fullname" placeholder="Enter Ground Name" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-company">User Id</label>
                                    <input type="text" class="form-control" id="basic-default-company" placeholder="Enter User Id" />
                                </div>
                                <div class="mb-3">
                                    <label for="html5-number-input" class="form-label">Ground Capacity</label>
                                    <input class="form-control" type="number" value="40" id="html5-number-input">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-company">Ground Width</label>
                                    <input type="text" class="form-control" id="basic-default-company" placeholder="Enter Ground Width" />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-company">Ground Height</label>
                                    <input type="text" class="form-control" id="basic-default-company" placeholder="Enter Ground Height" />
                                </div>
                                <div class="mb-3">
                                    <label for="exampleFormControlSelect1" class="form-label">State Id</label>
                                    <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                                        <option selected>Open this select menu</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="exampleFormControlSelect1" class="form-label">City Id</label>
                                    <select class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                                        <option selected>Open this select menu</option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-message">Address</label>
                                    <textarea id="basic-default-message"
                                              class="form-control"
                                              placeholder="Enter Address"></textarea>
                                </div>
                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" />
                                    <label class="form-check-label" for="flexSwitchCheckDefault">Booking permission Allow or Not</label>
                                </div>
                                <button type="Save" class="btn btn-primary">Submit</button>
                                <a asp-action="GroundList" class="btn btn-secondary ms-2">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->
    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->