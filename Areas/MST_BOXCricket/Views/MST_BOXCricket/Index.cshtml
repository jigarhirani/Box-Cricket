@using System.Data
@using BOXCricket.BAL
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">

        <!-- Content wrapper -->
        <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
                <h4 class="py-3 mb-4"><span class="text-muted fw-light">BOXCricket /</span> BOXCricket List</h4>

                <partial name="_ShowAlertInfo" />

                <div class="card mb-md-4">
                    <div class="card-header flex-column flex-md-row d-flex justify-content-between align-items-center">
                        <div class="head-label text-left">
                            <h5 class="card-title mb-0">
                                <i class='bx bx-search-alt-2'></i> Search
                            </h5>
                        </div>
                    </div>
                    <hr />
                    <div class="card-body">
                        <partial name="_BOXCricketListFilterForm" />
                    </div>
                </div>               

                <!-- Hoverable Table rows -->
                <div class="card">
                    <div class="card-header flex-column flex-md-row d-flex justify-content-between align-items-center">
                        <div class="head-label text-left">
                            <h5 class="card-title mb-0"><i class='bx bx-search-alt-2'></i> Search Result</h5>
                        </div>
                        <div class="dt-action-buttons text-end pt-3 pt-md-0">
                            <a asp-action="Add" class="dt-button create-new btn btn-success" tabindex="0"
                               aria-controls="DataTables_Table_0">
                                <span>
                                    <i class="bx bx-plus me-sm-1"></i>
                                    <span class="d-none d-sm-inline-block">Add New BOXCricket</span>
                                </span>
                            </a>
                        </div>
                    </div>
                    <partial name="_BOXCricketList" />
                </div>
                <!--/ Hoverable Table rows -->
            </div>
            <!-- / Content -->


            <div class="content-backdrop fade"></div>
        </div>
        <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
</div>

<!-- Overlay -->
<div class="layout-overlay layout-menu-toggle"></div>

<!-- / Layout wrapper -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const deleteButtons = document.querySelectorAll('[data-confirm]');

        deleteButtons.forEach(button => {
            button.addEventListener('click', function (e) {
                const confirmationMessage = this.getAttribute('data-confirm');
                e.preventDefault(); // Prevent the default action
                Swal.fire({
                    title: 'Are you sure?',
                    text: confirmationMessage,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If the user confirms, proceed with the action
                        window.location.href = this.getAttribute('href');
                    }
                });
            });
        });
    });
</script>