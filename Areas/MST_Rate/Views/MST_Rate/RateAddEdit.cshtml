@using System.Data
@using BOXCricket.BAL
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BOXCricket.Areas.MST_Rate.Models.MST_RateModel;

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4"><span class="text-muted fw-light">Rates /</span> Rate Add-Edit</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="col-lg-8 mx-auto">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Rate Details</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="Save" method="post">
                                <input type="hidden" id="RateID" asp-for="RateID" />

                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label for="exampleFormControlSelect1" class="form-label">BOX Cricket</label>
                                        <select type="text" class="form-select" aria-label="Default select example"
                                                asp-for="BOXCricketID"
                                                asp-items="@(new SelectList(ViewBag.BOXCricketList, "BOXCricketID", "BOXCricketName"))" onchange="funOnBOXCricketChange();" autofocus>
                                            <option value="">Select the BOX Cricket</option>
                                        </select>
                                        <span asp-validation-for="BOXCricketID" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3 col-md-6">
                                        <label asp-for="GroundID" for="exampleFormControlSelect1" class="form-label">Ground Name</label>
                                        <Select type="text" class="form-select" aria-label="Default select example" asp-for="GroundID" asp-items="@(new SelectList(ViewBag.GroundList, "GroundID", "GroundName"))">
                                            <option value="">Select the Ground</option>
                                        </Select>
                                        <span asp-validation-for="GroundID" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label asp-for="DayOfWeek" for="exampleFormControlSelect1" class="form-label">Day Of Week</label>
                                            <select asp-for="DayOfWeek" class="form-select" id="exampleFormControlSelect1" aria-label="Default select example">
                                                <option disabled selected>Select Day Of Week</option>
                                                <option value="Sunday">Sunday</option>
                                                <option value="Monday">Monday</option>
                                                <option value="Tuesday">Tuesday</option>
                                                <option value="Wednesday">Wednesday</option>
                                                <option value="Thursday">Thursday</option>
                                                <option value="Friday">Friday</option>
                                                <option value="Saturday">Saturday</option>
                                            </select>
                                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3 col-md-6">
                                            <label asp-for="SlotNO" for="exampleFormControlSelect1" class="form-label">Slot</label>
                                            <Select type="text" class="form-select" aria-label="Default select example" asp-for="SlotNO" asp-items="@(new SelectList(ViewBag.SlotList, "SlotNO", "SlotDetails"))">
                                                <option value="">Select the Slot</option>
                                            </Select>
                                            <span asp-validation-for="SlotNO" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="HourlyRate" class="form-label" for="basic-default-company">Hourly Rate</label>
                                    <input asp-for="HourlyRate" type="text" class="form-control" id="HourlyRate" placeholder="Enter Hourly Rate in INR" />
                                    <span asp-validation-for="HourlyRate" class="text-danger"></span>
                                </div>

                                <div class="demo-inline-spacing">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->
    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}


@section scripts {
    <script>

        function funOnBOXCricketChange() {
            var BOXCricketID = $("#BOXCricketID").val();

            $("#GroundID").empty();
            $("#GroundID").append($("<option></option>").val("").html("Select Ground"));
            if (BOXCricketID !== "") {
                $.ajax(
                    {
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        url: "@Url.Action("GroundDropdownByBOXCricket", "MST_Rate")" + "?&BOXCricketID=" + BOXCricketID,
                        data: {},
                        dataType: "json",
                        success: function (Result) {
                            $.each(Result, function (index, item) {
                                $("#GroundID").append($("<option></option>").val(item.groundID).html(item.groundName));

                            });
                        },
                        error: function (err) {
                            //alert(err.toString();
                            alert("Error while fetch data");
                        }
                    }
                )
            }
        }

        $(document).ready(function () {
            // Event handler when form fields change
            $("select").change(function () {
                // Check if all required fields are filled
                var BOXCricketID = $("#BOXCricketID").val();
                var GroundID = $("#GroundID").val();
                var DayOfWeek = $("#exampleFormControlSelect1").val(); // Ensure DayOfWeek is treated as a string
                var SlotNO = $("#SlotNO").val();

                if (BOXCricketID !== "" && GroundID !== "" && DayOfWeek !== "" && SlotNO !== "") {
                    // Make AJAX request
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("GetRateDetails", "MST_Rate")",
                        data: {
                            BOXCricketID: BOXCricketID,
                            GroundID: GroundID,
                            DayOfWeek: DayOfWeek,
                            SlotNO: SlotNO
                        },
                        success: function (result) {
                            // Update form fields with received data
                            $("#RateID").val(result.rateID); // Assuming you have a hidden field with id "RateID"
                            $("#HourlyRate").val(result.hourlyRate); // Assuming you have an input field with id "HourlyRate"
                        },
                        error: function (err) {
                            console.error("Error while fetching data:", err);
                        }
                    });
                }
            });
        });
    </script>
}